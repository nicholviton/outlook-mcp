{
  "dxt_version": "0.1",
  "name": "outlook-mcp",
  "version": "1.0.0",
  "description": "Connects your LLM to the Outlook setup. Read and write emails, contacts, and calendar events. ",
  "author": {
    "name": "XenoXilus",
    "email": "xenoxilus@gmail.com"
  },
  "user_config": {
    "azure_client_id": {
      "type": "string",
      "title": "Azure Client ID",
      "description": "Azure Active Directory application (client) ID",
      "required": true
    },
    "azure_tenant_id": {
      "type": "string",
      "title": "Azure Tenant ID", 
      "description": "Azure Active Directory tenant (directory) ID",
      "required": true
    }
  },
  "server": {
    "type": "node",
    "entry_point": "server/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/server/index.js"
      ],
      "env": {
        "AZURE_CLIENT_ID": "${user_config.azure_client_id}",
        "AZURE_TENANT_ID": "${user_config.azure_tenant_id}"
      }
    }
  },
  "keywords": [
    "outlook",
    "email",
    "calendar",
    "contacts"
  ],
  "license": "MIT"
}
